# Orchestration â€” environment configuration
# Copy to .env and fill in values. All variables use the ORCH_ prefix.

# ---------------------------------------------------------------------------
# Agent Defaults
# ---------------------------------------------------------------------------

# Default agent type: "sdk" or "api" (default: sdk)
ORCH_DEFAULT_AGENT_TYPE=sdk

# Default provider name: "sdk", "anthropic", etc. (default: sdk)
ORCH_DEFAULT_PROVIDER=sdk

# Default model identifier for API agents
ORCH_DEFAULT_MODEL=claude-sonnet-4-20250514

# ---------------------------------------------------------------------------
# Anthropic
# ---------------------------------------------------------------------------

# Anthropic API key (required for API-key auth)
ORCH_ANTHROPIC_API_KEY=

# Bearer token auth (alternative to API key, for proxy/gateway configs)
ORCH_ANTHROPIC_AUTH_TOKEN=

# Base URL override (for LiteLLM proxy or custom gateway)
ORCH_ANTHROPIC_BASE_URL=

# ---------------------------------------------------------------------------
# Logging
# ---------------------------------------------------------------------------

# Log level: DEBUG | INFO | WARNING | ERROR | CRITICAL (default: INFO)
ORCH_LOG_LEVEL=INFO

# Log format: "json" for structured JSON lines, "text" for human-readable (default: json)
ORCH_LOG_FORMAT=json

# ---------------------------------------------------------------------------
# Server
# ---------------------------------------------------------------------------

# Host address for the REST/WebSocket server (default: 127.0.0.1)
ORCH_HOST=127.0.0.1

# Port for the REST/WebSocket server (default: 8000)
ORCH_PORT=8000
